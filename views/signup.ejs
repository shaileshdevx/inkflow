<%- include('partials/header') %>


<div class="register-container">


  <% if(successMessage && successMessage.length > 0) { %>
    <div class="success-flash flashMessage">
      <button class="flash-btn">X</button>

      <%= successMessage %>
      </div>
  <% } %>
  
  <% if(errorMessage && errorMessage.length > 0) { %>
    <div class="error-flash flashMessage">
      <button class="flash-btn">X</button>

      <%= errorMessage %>
      </div>
  <% } %>

  <div class="logo-container-signup">
    <a href="/">Inkflow</a>
  </div>
  <form action="/signup" method="POST">

    <input type="text" name="fullname" placeholder="Full Name" required autofocus>
    <input type="email" name="email" placeholder="Email" required>
    <input type="text" name="username" placeholder="Username" required>
    <input type="text" name="password" placeholder="Password" required>
    <button type="submit" class="signup-btn">Sign up</button>


  </form>
  <div class="login-page-container">
    <div class="login-link">
      <p>Already register</p><a href="/login">Login</a>
    </div>
  </div>

  <div class="img-container">
    <img src="https://miro.medium.com/v2/format:webp/4*SdjkdS98aKH76I8eD0_qjw.png" alt="">
  </div>
</div>





